<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAlignment="center" android:clickable="false"
                android:background="#ffffff">
    <ImageView
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:id="@+id/krantiIcon"
            android:src="@drawable/ic_torch_transparent_bg"
            android:contentDescription="krantiIcon"
            android:layout_alignRight="@+id/projectKrantiTextView"
            android:layout_alignLeft="@+id/projectKrantiTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Kranti"
            android:id="@+id/projectKrantiTextView"
            android:textSize="22sp"
            android:textAlignment="center"
            android:singleLine="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BE THE CHANGE"
            android:id="@+id/beTheChangeTextView"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" android:layout_below="@+id/projectKrantiTextView"/>
    <Button
            android:id="@+id/issueButton"
            android:text="Report an issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:onClick="reportIssue"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:textColor="#bd3d11"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issueButton"
            android:layout_centerHorizontal="true"
            android:text="My Reports"
            android:onClick="viewIssues"
            android:id="@+id/viewIssueButton"
            android:layout_gravity="center"
            android:singleLine="false"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:textColor="#bd3d11"
            android:layout_alignLeft="@+id/issueButton"
            android:layout_alignRight="@+id/issueButton"/>

</RelativeLayout>